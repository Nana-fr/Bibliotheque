<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		{# Google Fonts #}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Quintessential&display=swap" rel="stylesheet">
		<script src="https://kit.fontawesome.com/1911e49993.js" crossorigin="anonymous"></script>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="\Bibliotheque\public\css\main.css">
		<link
		rel="stylesheet" type="text/css" href="{{asset('\css/main.css')}}">

		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous" defer></script>

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

	</head>
	<body>
		<header>
			{# <div class='row'>
				<div class='col-12'>
					<h1 class='text-center text-white py-4'>Bibliothèque Le Parchemin <img src="../../image/parchemin-logo.png" class="img-fluid" alt=""></h1>
				</div>
			</div> #}
		</header>
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand ps-3" href="#"><img id='logo' src="../../image/parchemin-logo.png" class="img-fluid" alt="logo"></a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav">
						<li class="nav-item">
							<a class="nav-link" href='{{path('books_listing')}}'><i class="fas fa-book-open fa-lg pe-2"></i>Catalogue</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href='{{path('users_listing')}}'><i class="fas fa-users fa-lg pe-2"></i>Utilisateurs</a>
						</li>
						{% if app.user %}
							<li class="nav-item dropdown">
								<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									<i class="fas fa-user-circle fa-lg pe-2"></i>
									{{app.user.firstname}}
									{{app.user.lastname}}
								</a>
								<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
									<li>
										<a class="dropdown-item font-Zen color" href="#">Voir profil</a>
									</li>
									<li>
										<a class="dropdown-item font-Zen color" href='{{path('app_logout')}}'>Déconnexion</a>
									</li>
								</ul>
							</li>
						{% else %}
							<li class="nav-item">
								<a href='{{path('app_login')}}' class="nav-link">Connexion</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		{% block body %}{% endblock %}

		<footer class='bg-dark'>
			<h4 class='pt-3 text-center'>Copyright</h4>
		</footer>
	</body>
</html>
