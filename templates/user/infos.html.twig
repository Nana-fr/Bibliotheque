{% extends 'base.html.twig' %}

{% block title %}Description
{% endblock %}
{% block javascripts %}
	<script type="text/javascript" src="../../js/form.js"></script>
{% endblock %}
{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<main class="example-wrapper">

		<h1 class='text-center my-5'>Description</h1>

			<table class='table table-striped text-center'> 
				<thead>
					<tr>
						<th>Prénom</th>
						<th>Nom</th>
						<th>Numéro de carte</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>{{user.getFirstname()}}</td>
						<td>{{user.getLastname()}}</td>
						<td>{{user.getCardNumber()}}</td>
					</tr>
				</tbody>
				<tr><th colspan="3">Liste des livres empruntés:</th></tr>
				{% if user.getBorrowings() %}
					{% for book in user.getBorrowings() %}
					<tr><td colspan="3">{{book.getBook().getTitle()}} de {{book.getBook().getWriterid().getFirstname}} {{book.getBook().getWriterid().getLastname}}</td></tr>
					{% endfor %}
				{% else %}
					<tr><td colspan="3">Actuellement aucun emprunt.</td></tr>
				{% endif %}
			</table>
		</main>
{% endblock %}
